{
  "compilerOptions": {
    // Good for relative imports
    "baseUrl": ".",
    "types": [
      "node",
      "react",
      "react-dom"
    ], // Explicitly include common types
    "paths": {
      "@/*": [
        "./*"
      ], // Simplified path for root imports (adjust if needed)
      "next/router": [
        "node_modules/next/dist/client/router"
      ],
      "next/link": [
        "node_modules/next/dist/client/link"
      ],
      "next/head": [
        "node_modules/next/dist/client/head"
      ],
      "next/dist/shared/lib/router-context": [
        "node_modules/next/dist/shared/lib/router-context"
      ]
    },
    "jsx": "preserve",
    "target": "ES5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}